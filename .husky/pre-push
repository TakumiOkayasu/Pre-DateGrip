#!/bin/sh

echo "Running pre-push checks (full build)..."

# Run full check including C++ build
cmd.exe //c "scripts\\check-all.bat"
if [ $? -ne 0 ]; then
    echo ""
    echo "=========================================="
    echo "Pre-push check failed!"
    echo "Fix the errors above before pushing."
    echo "=========================================="
    exit 1
fi

echo "Pre-push checks passed!"
